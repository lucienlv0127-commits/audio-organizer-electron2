{
  "name": "audio-organizer-electron",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "electron .",
    "dist:mac": "electron-builder --mac --arm64",
    "dist:win": "electron-builder --win nsis --publish never",
    "dist:all": "electron-builder -mwl"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourteam.audioorganizer",
    "productName": "音频搜索",
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "backgroundColor": "#ffffff",
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}